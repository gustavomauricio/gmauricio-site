<form
  name="contact"
  method="POST"
  data-netlify="true"
  className="text-black dark:text-white"
>
  <input
    required
    className="mb-3 p-2 bg-white dark:bg-[#333]"
    type="text"
    name="name"
    placeholder="Name"
  />
  <div className="mb-3">
    <input
      required
      className="p-2 bg-white dark:bg-[#333]"
      name="name"
      type="email"
      placeholder="Email"
    />
  </div>
  <textarea
    required
    className="mb-3 p-2 bg-white dark:bg-[#333]"
    name="body"
    placeholder="Please include any relevant details"
    rows={8}
  />
